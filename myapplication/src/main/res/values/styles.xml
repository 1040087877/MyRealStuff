<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@drawable/context_menu</item>
        <item name="android:dropDownListViewStyle">@style/myDropDronListViewStyle</item>
        <item name="android:dropDownItemStyle">@style/myDropDronItemStyle</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- for searchview -->
    <style name="myDropDronItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <!-- for searchview -->
    <style name="myDropDronListViewStyle" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/icons</item>
    </style>
</resources>
