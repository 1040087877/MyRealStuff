<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="7dp"
                                    android:layout_marginTop="6dp"
                                    android:orientation="vertical"
                                    app:cardElevation="4dp"
                                    app:cardCornerRadius="3dp"
    >

    <LinearLayout
        android:id="@+id/stuff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:foreground="?selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/stuff_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="利用LiveTemplate给WebStorm加上ReactNative的智能代码提醒"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                />

            <ImageButton
                android:id="@+id/like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unlike"
                android:background="?selectableItemBackground"
                />
        </LinearLayout>
        <WebView
            android:id="@+id/readability_wv"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"
            ></WebView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/stuff_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dear宅学长"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/stuff_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016-02-26" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>